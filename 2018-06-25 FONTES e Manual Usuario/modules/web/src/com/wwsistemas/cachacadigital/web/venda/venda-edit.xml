<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.wwsistemas.cachacadigital.web.venda.VendaEdit"
        datasource="vendaDs"
        focusComponent="fieldGroup"
        messagesPack="com.wwsistemas.cachacadigital.web.venda">
    <dsContext>
        <datasource id="vendaDs"
                    class="com.wwsistemas.cachacadigital.entity.Venda"
                    view="venda">
            <collectionDatasource id="idProdutoVendaDs"
                                  property="idProdutoVenda"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="fieldGroup"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="vendaDs"
                    height="33px">
            <column width="250px">
                <field property="idCliente"/>
            </column>
            <column>
                <field property="data_venda"/>
            </column>
        </fieldGroup>
        <table id="idProdutoVendaTable"
               height="305px"
               width="659px">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="idProduto"/>
                <column id="idProduto.idCategoria"/>
                <column id="quantidade"/>
                <column id="idProduto.preco"
                        caption="PreÃ§o"/>
                <column id="custo"
                        caption="Total"/>
            </columns>
            <rows datasource="idProdutoVendaDs"/>
            <buttonsPanel>
                <button id="add"
                        action="idProdutoVendaTable.create"
                        invoke="onAddClick"/>
                <button id="edit"
                        action="idProdutoVendaTable.edit"/>
                <button action="idProdutoVendaTable.remove"/>
            </buttonsPanel>
        </table>
        <fieldGroup datasource="vendaDs">
            <column width="250px">
                <field caption="Total"
                       editable="false"
                       property="total2"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               height="37px"
               screen="editWindowActions"/>
    </layout>
</window>
