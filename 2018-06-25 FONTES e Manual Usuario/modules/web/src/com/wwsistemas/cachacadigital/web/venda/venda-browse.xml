<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.wwsistemas.cachacadigital.web.venda.VendaBrowse"
        focusComponent="vendasTable"
        lookupComponent="vendasTable"
        messagesPack="com.wwsistemas.cachacadigital.web.venda">
    <dsContext>
        <groupDatasource id="vendasDs"
                         class="com.wwsistemas.cachacadigital.entity.Venda"
                         view="_local">
            <query>
                <![CDATA[select e from cachaca$Venda e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vendasTable"
            spacing="true">
        <filter id="filter"
                applyTo="vendasTable"
                datasource="vendasDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="vendasTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="data_venda"/>
                <column id="total"/>
            </columns>
            <rows datasource="vendasDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="vendasTable.create"/>
                <button id="editBtn"
                        action="vendasTable.edit"/>
                <button id="removeBtn"
                        action="vendasTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
