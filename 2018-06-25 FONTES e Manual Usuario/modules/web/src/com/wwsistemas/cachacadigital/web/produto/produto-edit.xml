<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.wwsistemas.cachacadigital.web.produto.ProdutoEdit"
        datasource="produtoDs"
        focusComponent="fieldGroup"
        messagesPack="com.wwsistemas.cachacadigital.web.produto">
    <dsContext>
        <datasource id="produtoDs"
                    class="com.wwsistemas.cachacadigital.entity.Produto"
                    view="produto-com-categoria">
            <collectionDatasource id="insumoProdutoDs"
                                  property="insumoProduto"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="produtoDs">
            <column width="250px">
                <field caption="Código"
                       editable="false"
                       property="id"/>
                <field property="nome"/>
                <field property="idCategoria"/>
                <field caption="Preço"
                       property="preco"/>
            </column>
        </fieldGroup>
        <table id="insumoProdutoTable"
               height="239px"
               width="392px">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="insumo"/>
                <column id="quantidade"/>
            </columns>
            <rows datasource="insumoProdutoDs"/>
            <buttonsPanel width="296px">
                <button action="insumoProdutoTable.create"
                        width="67px"/>
                <button action="insumoProdutoTable.edit"
                        width="56px"/>
                <button id="removeButton"
                        action="insumoProdutoTable.remove"
                        width="80px"/>
            </buttonsPanel>
        </table>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
